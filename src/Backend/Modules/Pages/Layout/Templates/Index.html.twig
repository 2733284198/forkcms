{% extends '/Layout/Templates/pages.html.twig' %}

{% block pagesTree %}
  <div class="sub-navigation">
    <div class="pages-tree">
      <div class="alert alert-warning visible-xs visible-sm">
        <p>{{ 'msg.movePagesNotPossible'|trans|capitalize }}</p>
      </div>
      <div id="tree">
        {{ tree|raw }}
      </div>
    </div>
    <div id="fullwidthSwitch">
      <a href="#close">&nbsp;</a>
    </div>
  </div>
{% endblock %}

{% block actionbar %}
  <div class="row fork-module-heading">
    <div class="col-md-12">
      <h2>
        {% if dgDrafts %}
          {{ 'lbl.Drafts'|trans|capitalize }}
        {% else %}
          {{ 'lbl.RecentlyEdited'|trans|capitalize }}
        {% endif %}
      </h2>
      {% if showPagesAdd %}
      <div class="btn-toolbar pull-right">
        <div class="btn-group" role="group">
          <a href="{{ geturl('add') }}" class="btn btn-default" title="{{ 'lbl.Add'|trans|capitalize }}">
            <span class="fa fa-plus"></span>
            {{ 'lbl.Add'|trans|capitalize }}
          </a>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dgDrafts %}
        {{ dgDrafts|raw }}
      {% endif %}
      {% if dgRecentlyEdited %}
        {{ dgRecentlyEdited|raw }}
      {% endif %}
      {% if not dgRecentlyEdited %}
        <p>{{ 'msg.NoItems'|trans|capitalize }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

