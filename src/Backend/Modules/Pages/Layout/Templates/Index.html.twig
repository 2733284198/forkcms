    <div class="pages-tree">
      <div class="alert alert-warning visible-xs visible-sm">
        <p><span class="fa fa-exclamation-triangle"></span>{{ 'msg.MovePagesNotPossible'|trans|capitalize }}</p>
      </div>
      <div id="tree">
        {{ tree|raw }}
      </div>
    </div>
    <div id="fullwidthSwitch">
      <a href="#close">&nbsp;</a>
    </div>
  </div>
{% endblock %}

{% block actionbar %}
    {% if showPagesAdd %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {{ macro.buttonIcon( geturl('add'), 'plus', 'lbl.Add'|trans|capitalize) }}
      </div>
    </div>
    {% endif %}
{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="content-block content-block-pb">
        {% if dgDrafts %}
          <div class="content-title">
            <p>{{ 'lbl.Drafts'|trans|capitalize }}</p>
          </div>
          <div class="responsive-table">
            {{ dgDrafts|raw }}
          </div>
        {% endif %}
      </div>
      <div class="content-block content-block-pb">
        {% if dgRecentlyEdited %}
          <div class="content-title">
            <p>{{ 'lbl.RecentlyEdited'|trans|capitalize }}</p>
          </div>
          <div class="resposive-table">
            {{ dgRecentlyEdited|raw }}
          </div>
        {% endif %}
      </div>
      {% if not dgRecentlyEdited %}
        <p>{{ 'msg.NoItems'|trans|capitalize }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

