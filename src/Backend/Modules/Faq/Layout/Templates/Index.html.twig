{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {% if showFaqAdd %}
          {{ macro.buttonIcon( geturl('add'), 'plus', 'lbl.Add'|trans|capitalize) }}
        {% endif %}
      </div>
    </div>
{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dataGrids %}
        {% for dataGrid in dataGrids %}
          <div id="dataGrid-{{ dataGrid.id }}" class="panel panel-default jsDataGridQuestionsHolder">
            <div class="panel-heading">
              <h3 class="panel-title">{{ dataGrid.title }}</h3>
            </div>
            {% if dataGrid.content %}
              {{ dataGrid.content | raw }}
            {% endif %}
            {% if not dataGrid.content %}
              <div class="panel-body">
                {{ emptyDatagrid | raw }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      {% endif %}
      {% if not dataGrids %}
        <div class="panel-body">
          <p>{{ 'msg.NoItems'|trans }}</p>
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
