{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {% if showExtensionsUploadModule %}
          {{ macro.buttonIcon( geturl('upload_module'), 'upload', 'lbl.UploadModule'|trans|capitalize) }}
        {% endif %}
        {{ macro.buttonIcon( 'http://www.fork-cms.com/extensions/apps', 'eye', 'lbl.FindModules'|trans|capitalize, '', 'target=_blank') }}
      </div>
    </div>
{% endblock %}

{% block content %}
  {% if warnings %}
  <div class="row fork-module-messages">
    <div class="col-md-12">
      <div class="panel panel-warning">
        <div class="panel-heading">
          <span class="panel-title">{{ 'msg.ModulesWarnings'|trans|capitalize }}</span>
        </div>
        <div class="panel-body">
          <ul>
            <li>
              <strong>{{ warnings.module }}</strong>
              <ul>
                {% for warning in warnings.warnings %}
                  <li>- {{ warning.message }}</li>
                {% endfor %}
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'lbl.InstalledModules'|trans|capitalize }}</h3>
        </div>
        {% if dataGridInstalledModules %}
        {{ dataGridInstalledModules|raw }}
        {% endif %}
        {% if not dataGridInstalledModules %}
        <div class="panel-body">
          <p>{{ 'msg.NoModulesInstalled'|trans|capitalize }}</p>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
  {% if dataGridInstallableModules %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'lbl.InstallableModules'|trans|capitalize }}</h3>
        </div>
        {{ dataGridInstallableModules|raw }}
      </div>
    </div>
  </div>
  {% endif %}
{% endblock %}

