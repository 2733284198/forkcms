{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
      <div class="btn-toolbar pull-right">
        <div class="btn-group" role="group">
          {% if showBlogAdd %}
            {% if filterCategory %}
              {{ macro.buttonIcon( geturl('add', null, '&category=#{filterCategory.id}'), 'plus', 'lbl.Add'|trans|capitalize) }}
            {% endif %}
            {% if not filterCategory %}
                {{ macro.buttonIcon( geturl('add'), 'plus', 'lbl.Add'|trans|capitalize) }}
            {% endif %}
          {% endif %}
        </div>
      </div>
{% endblock %}

{% block content %}

  {% if hasMultipleCategories %}
      {% form filter %}
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label for="category" class="control-label">{{ 'msg.ShowOnlyItemsInCategory'|trans }}</label>
                  {% form_field_error category %} {% form_field category %}
                </div>
              </div>
            </div>
          </div>
          <div class="panel-footer">
            <div class="btn-toolbar">
              <div class="btn-group pull-right">
                <button id="search" type="submit" class="btn btn-primary" name="search">
                  <span class="fa fa-refresh"></span>&nbsp;
                  {{ 'lbl.UpdateFilter'|trans|capitalize }}
                </button>
              </div>
            </div>
          </div>
        </div>
      {% endform %}
  {% endif %}

  {% if dgRecent %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default jsDataGridHolder">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'lbl.RecentlyEdited'|trans|capitalize }}</h3>
        </div>
        {{ dgRecent|raw }}
      </div>
    </div>
  </div>
  {% endif %}
  {% if dgDrafts %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      <div class="panel panel-default jsDataGridHolder">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'lbl.Drafts'|trans|capitalize }}</h3>
        </div>
        {{ dgDrafts|raw }}
      </div>
    </div>
  </div>
  {% endif %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dgPosts %}
      <div class="panel panel-default jsDataGridHolder">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'lbl.PublishedArticles'|trans|capitalize }}</h3>
        </div>
        {{ dgPosts|raw }}
      </div>
      {% endif %}
      {% if not dgPosts %}
      {% if filterCategory %}
      <p>{{ 'msg.NoItems'|trans|sprintf(geturl('add', null, '&category=#{filterCategory.id}')) }}</p>
      {% endif %}
      {% if not filterCategory %}
      <p>{{ 'msg.NoItems'|trans|sprintf(geturl('add')) }}</p>
      {% endif %}
      {% endif %}
    </div>
  </div>
{% endblock %}
