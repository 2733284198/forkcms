                  <h2 class="panel-title">{{ column.title }}</h2>
                </div>
                <div class="panel-body" style="display: none;">
                  {{ 'msg.WillBeEnabledOnSave'|trans }}
                </div>
              </div>
            {% endif %}
            {% if not column.hidden %}
              {{ column.content|raw }}
