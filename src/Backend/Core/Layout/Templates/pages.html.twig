<!DOCTYPE html>
<html lang="{{ INTERFACE_LANGUAGE }}">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="chrome=1" />
    <meta name="robots" content="noindex, nofollow" />

    <title>{% if page_title %}{{ page_title|capitalize }} - {% endif %}{{ SITE_TITLE }} - Fork CMS</title>
    <link rel="shortcut icon" href="/src/Backend/favicon.ico" />

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>

    {% for cssFile in cssFiles %}
        <link rel="stylesheet" href="{{ cssFile.file }}" />{{ CRLF }}{{ TAB }}
    {% endfor %}

    {% for jsFile in jsFiles %}
        <script src="{{ jsFile.file }}"></script>{{ CRLF }}{{ TAB }}
    {% endfor %}

    <script>
        //<![CDATA[
        {{ jsData|raw }}

        // reports
        $(function()
        {
            {% if form_error %} jsBackend.messages.add('danger', '{{ 'err.FormError'|trans|addslashes }}');{% endif %}
            {% if usingRevision %} jsBackend.messages.add('notice', '{{ 'msg.UsingARevision'|trans|addslashes }}');{% endif %}
            {% if usingDraft %} jsBackend.messages.add('notice', '{{ 'msg.UsingADraft'|trans|addslashes }}');{% endif %}
            {% if report %} jsBackend.messages.add('success', '{{ reportMessage|addslashes }}');{% endif %}
            {% if errorMessage %} jsBackend.messages.add('danger', '{{ 'errorMessage'|addslashes }}');{% endif %}
        });
        //]]>
    </script>
</head>
<body id="{{ bodyID }}" class="{{ bodyClass }}">
{# This file is generated by the Spoon2Twig Converter #}

<div class="header clearfix">
    <div class="header-left hidden-xs">
        {{ SITE_TITLE }}
        <a data-url="{{ SITE_URL }}{{ prefixURL }}/{{ item.url }}{% if appendRevision %}?page_revision={{ item.revision_id }}{% endif %}" href="{{ SITE_URL }}{{ prefixURL }}/{{ item.url }}{% if appendRevision %}?page_revision={{ item.revision_id }}{% endif %}">
            <small>{{ SITE_URL }}{{ prefixURL }}/<span id="generatedUrl">{{ item.url }}</span></small>
        </a>
    </div>
    <div class="header-right">
        <ul class="nav navbar-nav navbar-user">
            {% if SITE_MULTILANGUAGE %}
                {% if workingLanguages %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" title="{{ LANGUAGE|uppercase }}">
                            {{ LANGUAGE|uppercase }}
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            {% for workingLanguage in workingLanguages %}
                                <li{% if workingLanguage.selected %} class="active"{% endif %}>
                                    <a href="{{ geturl(null,null,null,workingLanguage.abbr) }}" title="{{ workingLanguage.label|capitalize }}">{{ workingLanguag.abbr|uppercase }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% endif %}
            {% endif %}
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" title="{{ authenticatedUserNickname }}">
                    <img src="{{ FRONTEND_FILES_URL }}/backend_users/avatars/32x32/{{ authenticatedUserAvatar }}" width="18" height="18" class="img-circle" alt="{{ authenticatedUserNickname }}" />
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    {% if authenticatedUserEditUrl %}
                        <li><a href="{{ authenticatedUserEditUrl }}">{{ 'lbl.EditProfile'|trans|capitalize }}</a></li>
                    {% endif %}
                    <li><a href="{{ geturl('logout','authentication') }}">{{ 'lbl.SignOut'|trans|capitalize }}</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>

<div class="main-wrapper">
    <div class="sidebar">
        <nav class="navbar navbar-default">
            <div class="navbar-header">
                <a class="navbar-brand" href="/{% if SITE_MULTILANGUAGE %}{{ LANGUAGE }}{% endif %}" title="{{ 'lbl.VisitWebsite'|trans|capitalize }}">
                    {{ SITE_TITLE }}
                </a>
                <a data-url="{{ SITE_URL }}{{ prefixURL }}/{{ item.url }}{% if appendRevision %}?page_revision={{ item.revision_id }}{% endif %}" href="{{ SITE_URL }}{{ prefixURL }}/{{ item.url }}{% if appendRevision %}?page_revision={{ item.revision_id }}{% endif %}">
                    <small>{{ SITE_URL }}{{ prefixURL }}/<span id="generatedUrl">{{ item.url }}</span></small>
                </a>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-collapse">
                {{ getmainnavigation('nav navbar-nav') }}
            </div>
        </nav>
    </div>

    <div id="content" class="content-wrapper">

        <div class="content-sidebar">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="tree">
                        {{ tree|raw }}
                    </div>
                </div>
            </div>
            <div id="fullwidthSwitch">
                <a href="#close">&nbsp;</a>
            </div>
        </div>

        <div class="content-main">
            <div class="panel panel-default">
                <div class="panel-body">
                    {% block content %}
                    {% endblock %}
                </div>
            </div>
        </div>

    </div>
</div>
{# This file is generated by the Spoon2Twig Converter #}

<footer id="footer">
    <div class="container">
        <div class="row">
            <div class="col-xs-2 col-xs-offset-5 col-sm-2 col-sm-offset-5">
                <p class="text-center text-muted">
                    <small><i>Powered by</i></small>
                </p>
                <a href="http://www.fork-cms.be" target="_blank">
                    <img src="/src/Backend/Core/Layout/images/logo_footer.svg" alt="Fork CMS" class="logo-footer img-responsive">
                </a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div id="messaging">
                    <noscript>
                        <div class="formMessage errorMessage">
                            <p>{{ err.JavascriptNotEnabled }}</p>
                        </div>
                    </noscript>
                    <div id="noCookies" class="formMessage errorMessage" style="display: none;">
                        <p>{{ err.CookiesNotEnabled }}</p>
                    </div>
                </div>
                <div id="ajaxSpinner" style="position: fixed; top: 10px; right: 10px; display: none;">
                    <img src="/src/Backend/Core/Layout/images/spinner.gif" width="16" height="16" alt="loading" />
                </div>
            </div>
        </div>
    </div>
</footer>
<div class="hidden">
    <div class="modal fade jsConfirmation" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|capitalize }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
                </div>
                <div class="modal-body">
                    <p class="jsConfirmationMessage">{{ msg.Confirmation }}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
                    <a href="#" class="btn btn-primary jsConfirmationSubmit">
                        {{ 'lbl.OK'|trans|capitalize }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Scripts should be placed here #}
</div>
</body>
</html>
