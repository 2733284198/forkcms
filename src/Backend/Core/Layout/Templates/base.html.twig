<!DOCTYPE html>
<html lang="{{ INTERFACE_LANGUAGE }}">

{% include "/Layout/Templates/head.html.twig" %}
{% import "/Layout/Templates/macros.html.twig" as macro %}

<body id="{{ bodyID }}" class="{{ bodyClass }}">
{# This file is generated by the Spoon2Twig Converter #}

{% include "/Layout/Templates/header.html.twig" %}

<div class="main-wrapper">
    <div class="sidebar">
        {% include "/Layout/Templates/navigation.html.twig" %}
        <div class="sub-navigation">
            <nav id="content-subnavigation" class="fork-nav-sidebar">
                {{ getnavigation(null,null,'nav navbar-nav navbar-sidebar') }}
            </nav>
        </div>
    </div>
    <div id="root">
        <div id="content" class="content-wrapper">
            <div class="content-main">
                <div class="content-action-bar">
                    <div class="container-fluid">
                        <div class="row fork-module-heading">
                            <div class="col-md-6">
                                {# TODO: breadcrumb #}
                            </div>
                            <div class="col-md-6">
                                {% block actionbar %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content">
                    <div class="container-fluid">
                        {% block content %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
        <div id="root-footer"></div>
    </div>
    {% include "/Layout/Templates/footer.html.twig" %}
</div>

<div id="messaging">
    <noscript>
        <div class="formMessage alert alert-danger alert-main">
            <p>{{ 'err.JavascriptNotEnabled'|trans|capitalize }}</p>
        </div>
    </noscript>
    <div id="noCookies" class="formMessage alert alert-danger alert-main" style="display: none;">
        <p>{{ 'err.CookiesNotEnabled'|trans|capitalize }}</p>
    </div>
</div>
<div id="ajaxSpinner" style="position: fixed; top: 10px; right: 10px; display: none;">
    <img src="/src/Backend/Core/Layout/images/spinner.gif" width="16" height="16" alt="loading" />
</div>


<div class="hidden">
    <div class="modal fade jsConfirmation" tabindex="-1" role="dialog" aria-labelledby="{{ 'lbl.Delete'|trans|capitalize }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="modal-title h4">{{ 'lbl.Delete'|trans|capitalize }}</span>
                </div>
                <div class="modal-body">
                    <p class="jsConfirmationMessage">{{ msg.Confirmation }}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'lbl.Cancel'|trans|capitalize }}</button>
                    <a href="#" class="btn btn-primary jsConfirmationSubmit">
                        {{ 'lbl.OK'|trans|capitalize }}
                    </a>
                </div>
            </div>
        </div>
    </div>
    {# Scripts should be placed here #}
</div>
</body>
</html>
