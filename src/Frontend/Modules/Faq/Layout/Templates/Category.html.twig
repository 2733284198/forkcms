{#
  variables that are available:
  - {{ questions }}: contains all questions inside this category
#}
{% import 'Core/Layout/Templates/Alerts.html.twig' as alerts %}

<section id="faqCategory" class="faq faq-category" itemscope itemtype="http://schema.org/Question">
  <h1 itemprop="genre">{{ category.title }}</h1>
  {% if questions is empty %}
    {{ alerts.alert('info', 'msg.NoQuestionsInCategory'|trans) }}
  {% else %}
    <ul>
      {% for question in questions %}
        <li itemprop="about"><a href="{{ question.full_url }}">{{ question.question }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}

  <ul class="pager">
    <li class="previous">
      <a href="{{ geturlforblock('Faq') }}" title="{{ 'lbl.ToFaqOverview'|trans|ucfirst }}">
        ‚Üê
        {{ 'lbl.ToFaqOverview'|trans|ucfirst }}
      </a>
    </li>
  </ul>
</section>
