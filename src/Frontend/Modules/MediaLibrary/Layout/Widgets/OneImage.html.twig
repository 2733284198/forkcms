{#
  Media Slider with BxSlider
  Variables that are available:
  - {{ mediaItem }}: Contains the MediaItem
#}

{% if mediaItem %}
  <section class="widgetMediaOneImage" itemscope itemtype="http://schema.org/ImageGallery">
    <figure itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
      <img src="{{ (mediaItem.getWebPath()) | imagine_filter('media_library_one_image_large') }}" itemprop="thumbnail" alt="{{ mediaItem.title }}" />
    </figure>
  </section>
{% endif %}
