{#
  variables that are available:
  - {{ isLoggedIn }}
  - {{ profile }}: only available when logged in
#}
<div class="module-profiles widget-profiles-login-link">
  <div class="block-body">
    {% if isLoggedIn %}
      {% block blockIsLoggedIn %}
        {{ 'msg.ProfilesLoggedInAs'|trans|format(profile.display_name, profile.url.dashboard)|raw }}
      {% endblock %}
    {% endif %}

    {% if not isLoggedIn %}
      {% block blockIsNotLoggedIn %}
        <a href="{{ geturlforblock('Profiles', 'Login') }}?queryString={{ geturlforblock('Profiles') }}">
          {{ 'lbl.Login'|trans|ucfirst }}
        </a>
      {% endblock %}
    {% endif %}
  </div>
</div>
